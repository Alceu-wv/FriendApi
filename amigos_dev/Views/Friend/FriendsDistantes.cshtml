@using amigos_dev.Domain.ViewModels;

@model IEnumerable<FriendViewModel>

@{
    ViewData["Title"] = "Amigos";
}

<h1>Amigos</h1>
<p>Selecione seus amigos:</p>
<form asp-controller="Friend" asp-action="SelectFriend" method="post">
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Nome</th>
                <th>Email</th>
                <th>Tipo de Amigo</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var friend in Model)
            {
                <tr>
                    <td>
                        <input type="checkbox" name="selected" value="@friend.Id" checked="@friend.Selected" />
                    </td>
                    <td>@friend.Name</td>
                    <td>@friend.Email</td>
                    <td>@friend.FriendType</td>
                </tr>
            }
        </tbody>
    </table>
    <button type="submit" class="btn btn-primary">Persistir Seleção</button>
</form>