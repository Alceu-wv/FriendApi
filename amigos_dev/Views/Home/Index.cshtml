@using amigos_dev.Domain.Entities;

@model Friend

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Inscrição de amigo</h1>
</div>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-controller="Friend" asp-action="Create" method="post">
            <div class="form-group">
                <label for="Nome">Nome</label>
                <input type="text" class="form-control" id="Name" name="Name" required>
            </div>
            <div class="form-group">
                <label for="Email">Email</label>
                <input type="email" class="form-control" id="Email" name="Email">
            </div>
            <div class="form-group">
                <label for="DataAniversario">Data de aniversário</label>
                <input type="date" class="form-control" id="Birthday" name="Birthday">
            </div>
            <div class="form-group">
                <label for="TipoAmigo">Tipo de amigo</label>
                <select class="form-control" id="FriendType" name="FriendType" required>
                    <option value="Proximo">Próximo</option>
                    <option value="Distante">Distante</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Inscrever amigo</button>
        </form>

        <div class="row justify-content-center">
            <div class="col-md-6">
                <hr />
                <br />
                <a asp-controller="Friend" asp-action="FriendsProximos">Amigos Próximos</a>
            </div>
        </div>
    </div>

</div>

